.page {
  display: flex;
  height: 100vh;
  background: linear-gradient(135deg, #ffefef 0%, #f0e6ff 100%);
  justify-content: center;
  align-items: center;
  font-family: system-ui, -apple-system, sans-serif;
}

.main {
  /* width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; */
  /* gap: 2rem; */
}

.content {
  max-width: 600px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rem;
}

.title {
  font-size: 1.5rem;
  color: #333;
  margin-bottom: 1rem;
}

.verseCard {
  background: white;
  border-radius: 20px;
  padding: 2rem;
  width: 100%;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.verseNumber {
  font-size: 1.2rem;
  color: #666;
  text-align: center;
  margin-bottom: 0.5rem;
}

.sanskrit {
  font-size: 1.4rem;
  line-height: 1.8;
  color: #333;
  text-align: center;
}

.translation {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #444;
  text-align: center;
  margin: 1rem 0;
}

.hindi {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #555;
  text-align: center;
}

.footer {
  margin-top: 2rem;
  text-align: center;
  width: 100%;
  background-color: #F0F0F04D;
  padding-bottom: 4rem;
}

.contact {
  color: #666;
  margin-bottom: 1rem;
  font-size: 0.9rem;
}

.social {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

.social a {
  opacity: 0.7;
  transition: opacity 0.2s;
}

.social a:hover {
  opacity: 1;
}
